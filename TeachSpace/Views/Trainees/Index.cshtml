@model IPagedList<TeachSpace.Models.Trainee>
@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Mvc.Core.Common
@using X.PagedList.Web.Common

@{
    ViewData["Title"] = "Trainees List";
    Layout = "_AdvancedLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-people-fill"></i> Trainees List</h1>
    <a asp-controller="Trainees"
       asp-action="Add"
       class="btn btn-success">
        <i class="bi bi-person-plus-fill"></i> Add Trainee
    </a>
</div>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> <strong>Success!</strong> @ViewBag.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> <strong>Error!</strong> @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center" style="width: 10%;">
                            <i class="bi bi-image"></i> Photo
                        </th>
                        <th class="text-center" style="width: 35%;">
                            <i class="bi bi-person"></i> Full Name
                        </th>
                        <th class="text-center" style="width: 30%;">
                            <i class="bi bi-building"></i> Department
                        </th>
                        <th class="text-center" style="width: 25%;">
                            <i class="bi bi-gear"></i> Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var trainee in Model)
                        {
                            <tr>
                                <td class="text-center align-middle">
                                    @if (!string.IsNullOrEmpty(trainee.Imag))
                                    {
                                        <img src="~/images/@trainee.Imag"
                                             alt="@trainee.Name"
                                             class="rounded-circle"
                                             style="width: 50px; height: 50px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-secondary rounded-circle d-inline-flex align-items-center justify-content-center"
                                             style="width: 50px; height: 50px;">
                                            <i class="bi bi-person text-white fs-4"></i>
                                        </div>
                                    }
                                </td>
                                <td class="text-center align-middle">
                                    <strong>@trainee.Name</strong>
                                </td>
                                <td class="text-center align-middle">
                                    @if (trainee.Department != null)
                                    {
                                        <strong>@trainee.Department.Name</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">No Department</span>
                                    }
                                </td>
                                <td class="text-center align-middle">
                                    <a asp-action="Details"
                                       asp-route-id="@trainee.Id"
                                       class="btn btn-sm btn-info text-white">
                                        <i class="bi bi-eye"></i> Details
                                    </a>

                                    <a asp-action="Edit"
                                       asp-route-id="@trainee.Id"
                                       class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                <i class="bi bi-info-circle fs-4"></i>
                                <p class="mb-0 mt-2">No trainees found.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (Model.PageCount > 1)
{
    <div class="d-flex justify-content-center mt-3">
        @Html.PagedListPager(
        Model,
        page => Url.Action("Index", new { page }),
        new PagedListRenderOptions
        {
            UlElementClasses = new[] { "pagination" },
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" },
            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
            DisplayLinkToNextPage = PagedListDisplayMode.Always
        })
</div>

<div class="text-center text-muted mt-2">
    <small>
        <i class="bi bi-info-circle"></i>
        Page @Model.PageNumber of @Model.PageCount (Total: @Model.TotalItemCount trainees)
    </small>
</div>
}
