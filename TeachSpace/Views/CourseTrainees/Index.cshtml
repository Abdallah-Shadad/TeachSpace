@model TeachSpace.View_Models.CourseResultsVM
@using X.PagedList.Mvc.Core
@using X.PagedList.Mvc.Core.Common
@using X.PagedList.Web.Common

@{
    ViewData["Title"] = "Course Trainees";
    Layout = "_AdvancedLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="bi bi-people-fill"></i> @Model.CourseName</h2>
        <span class="badge bg-secondary">@Model.DepartmentName</span>
        <span class="badge bg-info text-dark">Min Degree: @Model.MinDegree</span>
    </div>
    <a asp-action="Add" asp-route-courseId="@ViewBag.CourseId" class="btn btn-success">
        <i class="bi bi-person-plus"></i> Add Trainee to Course
    </a>
</div>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Degree</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.Trainees)
                    {
                        <tr>
                            <td><img src="~/images/@item.Image" class="rounded-circle" style="width: 40px; height: 40px;" /></td>
                            <td><strong>@item.TraineeName</strong></td>
                            <td>
                                <span class="fw-bold">@item.Degree</span>
                            </td>
                            <td>
                                <span class="badge bg-@(item.Degree >= Model.MinDegree ? "success" : "danger")">
                                    @(item.Degree >= Model.MinDegree ? "Pass" : "Fail")
                                </span>
                            </td>
                            <td>
                                <a asp-action="EditDegree"
                                   asp-route-courseId="@ViewBag.CourseId"
                                   asp-route-traineeId="@item.TraineeId"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i> Edit Grade
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (Model.Trainees != null && Model.Trainees.PageCount > 1)
{
    <div class="d-flex justify-content-center mt-3">
        @Html.PagedListPager(Model.Trainees, page => Url.Action("Index", new { id = ViewBag.CourseId, page }),
        new PagedListRenderOptions
        {
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" },
            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
            DisplayLinkToNextPage = PagedListDisplayMode.Always
        })
</div>
}

<div class="mt-3">
    <a asp-controller="Courses" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Courses List
    </a>
</div>