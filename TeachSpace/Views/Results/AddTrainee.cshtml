@model TeachSpace.View_Models.CourseRegistrationVM

@{
    ViewData["Title"] = "Register Trainee";
    Layout = "_AdvancedLayout";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0"><i class="bi bi-person-plus-fill"></i> Add Trainee to Results</h4>
            </div>
            <div class="card-body">
                <h5 class="card-title text-center mb-4">@Model.CourseName</h5>

                <form asp-action="AddTrainee" method="post">
                    <input type="hidden" asp-for="CourseId" />

                    <div class="mb-3">
                        <label class="form-label fw-bold">Select Student</label>

                        @if (Model.AvailableTrainees != null && Model.AvailableTrainees.Any())
                        {
                            <select asp-for="TraineeId" asp-items="Model.AvailableTrainees" class="form-select">
                                <option value="">-- Select Trainee --</option>
                            </select>
                            <span asp-validation-for="TraineeId" class="text-danger"></span>
                        }
                        else
                        {
                            <div class="alert alert-warning d-flex align-items-center" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <div>
                                    All registered trainees are already in this course list!
                                </div>
                            </div>
                        }
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" asp-route-courseId="@Model.CourseId" class="btn btn-secondary me-md-2">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>

                        @if (Model.AvailableTrainees != null && Model.AvailableTrainees.Any())
                        {
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Add Trainee
                            </button>
                        }
                    </div>
                    <div class="mb-3">
                        <label asp-for="Degree" class="form-label fw-bold">Initial Grade</label>
                        <input asp-for="Degree" type="number" class="form-control" min="0" max="100" value="0" />
                        <span asp-validation-for="Degree" class="text-danger"></span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}