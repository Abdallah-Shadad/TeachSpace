@model TeachSpace.View_Models.CourseResultsVM
@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Mvc.Core.Common

@{
    ViewBag.Title = "Course Results";
    // This code you wrote is perfect for getting the courseId
    int? selectedCourseId = Context.Request.Query["courseId"].FirstOrDefault() != null
        ? int.Parse(Context.Request.Query["courseId"].FirstOrDefault())
        : (int?)null;

    Layout = "_AdvancedLayout";
}

<h2>Course Results</h2>

<form method="get" asp-action="Index">
    <div class="form-group">
        <label>Select Course:</label>
        <select name="courseId" class="form-control" onchange="this.form.submit()">
            <option value="">-- Choose Course --</option>

            @foreach (var c in ViewBag.Courses)
            {
                <option value="@c.Id" selected="@(selectedCourseId == c.Id ? "selected" : null)">
                    @c.Name
                </option>
            }
        </select>
    </div>
</form>

<hr />

@if (Model == null)
{
    <h4>Please choose a course.</h4>
}
else
{
    <h3>@Model.CourseName (Min Degree: @Model.MinDegree)</h3>

    <table class="table table-bordered table-striped mt-3">
        <thead>
            <tr>
                <th>Trainee Name</th>
                <th>Department</th>
                <th>Degree</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @* This foreach loop still works perfectly! *@
            @foreach (var t in Model.Trainees)
            {
                <tr>
                    <td>@t.TraineeName</td>
                    <td>@t.DepartmentName</td>
                    <td>@t.Degree</td>
                    <td class="@(t.Status == "Pass" ? "text-success" : "text-danger")">@t.Status</td>
                </tr>
            }
        </tbody>
    </table>

    <br />
    <div class="d-flex justify-content-center">
        @Html.PagedListPager(Model.Trainees, page => Url.Action("Index", new { page, courseId = selectedCourseId }), new PagedListRenderOptions
        {
            LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" }
        })
</div>
}