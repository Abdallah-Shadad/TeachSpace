@model TeachSpace.Models.Instructor

@{
    ViewData["Title"] = "Instructor Details";
    Layout = "_AdvancedLayout";
}

<div class="container mt-4">

    <div class="card shadow-lg">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0">
                <i class="bi bi-person-badge"></i> @Model.Name
            </h3>
        </div>

        <div class="card-body">
            <div class="row">

                <!-- IMAGE -->
                <div class="col-md-4 text-center">
                    <img src="~/images/@Model.Imag"
                         alt="@Model.Name"
                         class="img-thumbnail rounded-circle shadow"
                         style="width: 200px; height: 200px; object-fit: cover; transition: 0.3s;">
                </div>

                <!-- DETAILS -->
                <div class="col-md-8">
                    <dl class="row fs-5">
                        <dt class="col-sm-4">Department:</dt>
                        <dd class="col-sm-8">@Model.Department.Name</dd>

                        <dt class="col-sm-4">Course:</dt>
                        <dd class="col-sm-8">@Model.Course.Name</dd>

                        <dt class="col-sm-4">Salary:</dt>
                        <dd class="col-sm-8">@Model.Salary.ToString("C")</dd>

                        <dt class="col-sm-4">Address:</dt>
                        <dd class="col-sm-8">@Model.Address</dd>
                    </dl>

                    <!-- ACTION BUTTONS -->
                    <div class="mt-4">

                        <!-- EDIT -->
                        <a asp-action="Edit"
                           asp-route-id="@Model.Id"
                           asp-route-returnTo="@ViewBag.ReturnTo"
                           asp-route-deptId="@ViewBag.DepartmentId"
                           asp-route-courseId="@ViewBag.CourseId"
                           class="btn btn-warning me-2">
                            <i class="bi bi-pencil"></i> Edit
                        </a>

                        <!-- SMART BACK -->
                        @if (ViewBag.ReturnTo == "Department")
                        {
                            <a asp-controller="Departments"
                               asp-action="Details"
                               asp-route-id="@ViewBag.DepartmentId"
                               class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Department
                            </a>
                        }
                        else if (ViewBag.ReturnTo == "Course")
                        {
                            <a asp-controller="Courses"
                               asp-action="Instructors"
                               asp-route-id="@ViewBag.CourseId"
                               class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Course
                            </a>
                        }
                        else
                        {
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
