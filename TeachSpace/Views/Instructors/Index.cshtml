@model IPagedList<TeachSpace.View_Models.InstructorListVM>
@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Mvc.Core.Common
@using X.PagedList.Web.Common

@{
    ViewData["Title"] = "Instructors List";
    Layout = "_AdvancedLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-people"></i> Instructors List</h1>

    <a asp-controller="Instructors"
       asp-action="Add"
       class="btn btn-success">
        <i class="bi bi-person-plus"></i> Add Instructor
    </a>
</div>

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th><i class="bi bi-person"></i> Name</th>
                        <th><i class="bi bi-building"></i> Department</th>
                        <th><i class="bi bi-book"></i> Course</th>
                        <th class="text-center"><i class="bi bi-gear"></i> Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var inst in Model)
                        {
                            <tr>
                                <td><strong>@inst.Name</strong></td>
                                <td>@inst.DepartmentName</td>
                                <td>@inst.CourseName</td>

                                <td class="text-center">

                                    <!-- DETAILS -->
                                    <a asp-controller="Instructors"
                                       asp-action="Details"
                                       asp-route-id="@inst.Id"
                                       class="btn btn-sm btn-info text-white me-1">
                                        <i class="bi bi-eye"></i> Details
                                    </a>

                                    <!-- EDIT -->
                                    <a asp-controller="Instructors"
                                       asp-action="Edit"
                                       asp-route-id="@inst.Id"
                                       class="btn btn-sm btn-warning me-1">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>

                                    <!-- DELETE BUTTON (opens modal) -->
                                    <button class="btn btn-sm btn-danger"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteModal"
                                            data-id="@inst.Id"
                                            data-return="Instructors"
                                            data-dept=""
                                            data-course="">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>

                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                <i class="bi bi-info-circle fs-4"></i>
                                <p>No instructors found.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (Model.PageCount > 1)
{
    <div class="d-flex justify-content-center mt-3">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
        new PagedListRenderOptions
        {
            UlElementClasses = new[] { "pagination" },
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" },
            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
            DisplayLinkToNextPage = PagedListDisplayMode.Always,
        })
</div>

<div class="text-center text-muted mt-2">
    <small>
        Page @Model.PageNumber of @Model.PageCount
        (Total @Model.TotalItemCount instructors)
    </small>
</div>
}

<!-- DELETE MODAL CONTAINER -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content" id="deleteModalContent">
            <!-- Content loads via AJAX -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const deleteModal = document.getElementById("deleteModal");

        deleteModal.addEventListener("show.bs.modal", event => {
            let button = event.relatedTarget;

            let id = button.getAttribute("data-id");
            let returnTo = button.getAttribute("data-return");
            let deptId = button.getAttribute("data-dept");
            let courseId = button.getAttribute("data-course");

            let url = `/Instructors/Delete/${id}?returnTo=${returnTo}&deptId=${deptId}&courseId=${courseId}`;

            fetch(url)
                .then(response => response.text())
                .then(html => {
                    document.getElementById("deleteModalContent").innerHTML = html;
                });
        });
    </script>
}
