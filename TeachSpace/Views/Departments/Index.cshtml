@model IPagedList<TeachSpace.View_Models.DepartmentListVM>
@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Mvc.Core.Common
@using X.PagedList.Web.Common

@{
    ViewData["Title"] = "Departments List";
    Layout = "_AdvancedLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-building"></i> Departments List</h1>
    <a asp-controller="Departments"
       asp-action="Add"
       class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add Department
    </a>
</div>

@* Display Success/Error Messages *@
@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> <strong>Success!</strong> @ViewBag.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> <strong>Error!</strong> @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 35%;">
                            <i class="bi bi-building"></i> Department Name
                        </th>
                        <th style="width: 35%;">
                            <i class="bi bi-person-badge"></i> Manager
                        </th>
                        <th style="width: 30%; text-align:center;">
                            <i class="bi bi-gear"></i> Actions
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var dept in Model)
                        {
                            <tr>
                                <td><strong>@dept.Name</strong></td>

                                <td>
                                    @if (!string.IsNullOrEmpty(dept.Manager))
                                    {
                                        <strong>@dept.Manager</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No manager assigned</span>
                                    }
                                </td>

                                <td class="text-center">
                                    <a asp-controller="Departments"
                                       asp-action="Details"
                                       asp-route-id="@dept.Id"
                                       class="btn btn-sm btn-info text-white me-1"
                                       title="Details">
                                        <i class="bi bi-eye"></i> Details
                                    </a>

                                    <a asp-controller="Departments"
                                       asp-action="Edit"
                                       asp-route-id="@dept.Id"
                                       class="btn btn-sm btn-warning me-1"
                                       title="Edit">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>

                                    <a asp-controller="Departments"
                                       asp-action="Delete"
                                       asp-route-id="@dept.Id"
                                       class="btn btn-sm btn-danger"
                                       title="Delete">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted py-4">
                                <i class="bi bi-info-circle fs-4"></i>
                                <p class="mb-0 mt-2">No departments found.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (Model != null)
{
    <div class="d-flex justify-content-center mt-3">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
        new PagedListRenderOptions
        {
            UlElementClasses = new[] { "pagination" },
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" },
            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
            DisplayLinkToNextPage = PagedListDisplayMode.Always,
            DisplayLinkToFirstPage = PagedListDisplayMode.Never,
            DisplayLinkToLastPage = PagedListDisplayMode.Never
        })
</div>

<div class="text-center text-muted mt-2">
    <small>
        <i class="bi bi-info-circle"></i>
        Page @Model.PageNumber of @Model.PageCount
        (Total: @Model.TotalItemCount departments)
    </small>
</div>
}
