@model X.PagedList.IPagedList<TeachSpace.View_Models.InstructorListVM>
@using X.PagedList.Mvc.Core
@using X.PagedList.Mvc.Core.Common

@{
    ViewData["Title"] = "Course Instructors";
    Layout = "_AdvancedLayout";
    int courseId = ViewBag.CourseId; // this for the button
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Instructors for Course</h2>

    <a asp-controller="Instructors"
       asp-action="Add"
       asp-route-courseId="@courseId"
       class="btn btn-success">
        <i class="bi bi-person-plus"></i> Add New Instructor
    </a>
</div>

<div class="card shadow">
    <div class="card-body">
        <table class="table table-striped table-bordered table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Department</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var i in Model)
                    {
                        <tr>
                            <td><strong>@i.Name</strong></td>
                            <td>@i.DepartmentName</td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a asp-controller="Instructors" asp-action="Details" asp-route-id="@i.Id" class="btn btn-sm btn-info text-white">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a asp-controller="Instructors" asp-action="Edit" asp-route-id="@i.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted py-4">
                            <i class="bi bi-info-circle fs-4"></i>
                            <p class="mt-2">No instructors assigned to this course yet.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (Model != null && Model.PageCount > 1)
{
    <div class="d-flex justify-content-center mt-3">
        @Html.PagedListPager(Model, page => Url.Action("Instructors", new { id = courseId, page }),
        new PagedListRenderOptions
        {
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" }
        })
</div>
}

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Courses List
    </a>
</div>