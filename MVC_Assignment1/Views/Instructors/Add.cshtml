@model MVC_Assignment1.View_Models.InstructorFormVM
@{
    ViewData["Title"] = "Add Instructor";
    Layout = "_AdvancedLayout";
}
<h2>Add Instructor</h2>

<form asp-action="Add" method="post" enctype="multipart/form-data">

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Salary" class="form-label"></label>
        <input asp-for="Salary" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Image</label>
        <input type="file" name="Image" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="DepartmentId"></label>
        <select asp-for="DepartmentId" asp-items="Model.Departments" class="form-control">
            <option value="">-- Select Department --</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="CourseId"></label>
        <select asp-for="CourseId" asp-items="Model.Courses" class="form-control">
            <option value="">-- Select Course --</option>
        </select>
    </div>

    <button class="btn btn-success">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
