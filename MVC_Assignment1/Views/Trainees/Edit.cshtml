@model TeachSpace.View_Models.TraineeFormVM
@{
    ViewData["Title"] = "Edit Trainee";
    Layout = "_AdvancedLayout";
}
<h1>Edit Trainee</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Dept_Id" class="form-label"></label>
        <select asp-for="Dept_Id" asp-items="Model.Departments" class="form-select">
            <option value="">-- Select Department --</option>
        </select>
        <span asp-validation-for="Dept_Id" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Existing Image</label><br />
        @if (Model.ExistingImage != null)
        {
            <img src="~/images/@Model.ExistingImage" width="150" />
        }
    </div>

    <div class="mb-3">
        <label asp-for="UploadImage" class="form-label">Change Image</label>
        <input asp-for="UploadImage" type="file" class="form-control" />
        <span asp-validation-for="UploadImage" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
