@model X.PagedList.IPagedList<MVC_Assignment1.View_Models.InstructorListVM>
@using X.PagedList.Mvc.Core
@using X.PagedList.Mvc.Core.Common
@using X.PagedList.Web.Common

@{
    ViewData["Title"] = "Instructors";
    Layout = "_AdvancedLayout";
}

<h2>Instructors for this Course</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Department</th>
            <th>Course</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var i in Model)
            {
                <tr>
                    <td>@i.Name</td>
                    <td>@i.DepartmentName</td>
                    <td>@i.CourseName</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">No instructors found.</td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-center">
    @Html.PagedListPager(Model, page => Url.Action("Instructors", new { id = ViewBag.CourseId, page }),
    new PagedListRenderOptions
    {
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" }
    })
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
