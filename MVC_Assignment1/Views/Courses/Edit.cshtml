@model MVC_Assignment1.View_Models.CourseFormVM
@{
    ViewData["Title"] = "Edit Course";
    Layout = "_AdvancedLayout";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow">
            <div class="card-header bg-warning">
                <h2 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Course</h2>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter course name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Degree" class="form-label"></label>
                            <input asp-for="Degree" type="number" class="form-control" min="0" max="100" placeholder="e.g., 100" />
                            <span asp-validation-for="Degree" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="MinDegree" class="form-label"></label>
                            <input asp-for="MinDegree" type="number" class="form-control" min="0" max="100" placeholder="e.g., 50" />
                            <span asp-validation-for="MinDegree" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DepartmentId" class="form-label"></label>
                        <select asp-for="DepartmentId" asp-items="Model.Departments" class="form-control">
                            <option value="">-- Select Department --</option>
                        </select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-save"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}